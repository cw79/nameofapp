<!-- CHOCOLATE -->

<a name="chocolates"> </a>
<div class="chocolates">
	<h1>Which Chocolate is Right For You?</h1>
	<h2>~ select at least two characteristics to see your personalized suggestion ~</h2>
	<div class="row" id="chocolates">
		<div class="col-xs-4 col-md-4">
			<div class="chocolate_characteristics">
			<% @characteristics.each do |character| %>
				<span class="character"><%= character %></span>
				<% end %>
			</div>
		</div>
		<div class="col-xs-8 col-md-8">
			<div class="chocolate_bars">
			<% @bars.each do |id, bar| %>
				<span class="bar">
				<%= image_tag(bar.image_key + ".png", alt: "bar.name") %></span>
				<% end %>
			</div>
		</div>
	</div>
</div>

